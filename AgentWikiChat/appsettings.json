{
  "AppSettings": {
    "AppName": "AgentWikiChat",
    "Version": "3.7.0",
    "SystemPromptPath": "Prompts/SystemPrompt.txt"
  },
  "Agent": {
    "MaxIterations": 10,
    "IterationTimeoutSeconds": 1200,
    "EnableReActPattern": true,
    "EnableMultiToolLoop": true,
    "ShowIntermediateSteps": true,
    "EnableSelfCorrection": true,
    "VerboseMode": false,
    "PreventDuplicateToolCalls": true,
    "MaxConsecutiveDuplicates": 2
  },
  "Ui": {
    "UseEmoji": true,
    "Debug": true
  },
  "SessionLogging": {
    "EnableSessionLogging": true,
    "LogDirectory": "Logs/Sessions",
    "LogFilePrefix": "session",
    "IncludeTimestamp": true,
    "SaveOnExit": true
  },
  "AI": {
    "ActiveProvider": "Anthropic-Claude-Sonnet",
    "Providers": [
      {
        "Name": "Ollama-Local",
        "Type": "Ollama",
        "BaseUrl": "http://localhost:11434",
        "Model": "qwen2.5:7b-instruct",
        "Temperature": 0.9,
        "MaxTokens": 2048,
        "TimeoutSeconds": 1200
      },
      {
        "Name": "OpenAI-GPT4",
        "Type": "OpenAI",
        "BaseUrl": "https://api.openai.com",
        "ApiKey": "MIAPIKEY",
        "Model": "gpt-4-turbo-preview",
        "Temperature": 0.7,
        "MaxTokens": 2000,
        "TimeoutSeconds": 120
      },
      {
        "Name": "OpenAI-GPT35",
        "Type": "OpenAI",
        "BaseUrl": "https://api.openai.com",
        "ApiKey": "MIAPIKEY",
        "Model": "gpt-4",
        "Temperature": 0.7,
        "MaxTokens": 2000,
        "TimeoutSeconds": 120
      },
      {
        "Name": "LMStudio-Local",
        "Type": "LMStudio",
        "BaseUrl": "http://localhost:1234",
        "Model": "meta-llama-3-8b-instruct",
        "Temperature": 0.7,
        "MaxTokens": 2048,
        "TimeoutSeconds": 300
      },
      {
        "Name": "Anthropic-Claude-Opus",
        "Type": "Anthropic",
        "BaseUrl": "https://api.anthropic.com",
        "ApiKey": "MIAPIKEY",
        "Model": "claude-3-opus-20240229",
        "Temperature": 0.7,
        "MaxTokens": 4096,
        "TimeoutSeconds": 120
      },
      {
        "Name": "Anthropic-Claude-Sonnet",
        "Type": "Anthropic",
        "BaseUrl": "https://api.anthropic.com",
        "ApiKey": "MIAPIKEY",
        "Model": "claude-sonnet-4-5-20250929",
        "Temperature": 0.7,
        "MaxTokens": 8192,
        "TimeoutSeconds": 120
      },
      {
        "Name": "Gemini-Pro",
        "Type": "Gemini",
        "BaseUrl": "https://generativelanguage.googleapis.com",
        "ApiKey": "MIAPIKEY",
        "Model": "gemini-2.5-pro",
        "Temperature": 0.7,
        "MaxTokens": 8192,
        "TimeoutSeconds": 120
      },
      {
        "Name": "Gemini-Flash",
        "Type": "Gemini",
        "BaseUrl": "https://generativelanguage.googleapis.com",
        "ApiKey": "MIAPIKEY",
        "Model": "gemini-2.5-flash",
        "Temperature": 0.7,
        "MaxTokens": 8192,
        "TimeoutSeconds": 120
      }
    ]
  },
  "Tools": {
    "WikipediaSearch": {
      "Enable": true
    },
    "Database": {
      "EnableDatabase": true,
      "EnableDatabaseSchema": true,
      "ActiveProvider": "SqlServer-Production",
      "Providers": [
        {
          "Name": "SqlServer-Production",
          "Type": "SqlServer",
          "ConnectionString": "Server=myServer;Database=myDb;User Id=myUser;Password=myPassword;TrustServerCertificate=True;",
          "CommandTimeout": 90,
          "MaxRowsToReturn": 100,
          "EnableQueryLogging": true
        },
        {
          "Name": "SqlServer-Development",
          "Type": "SqlServer",
          "ConnectionString": "Server=localhost;Database=DevDB;Integrated Security=True;TrustServerCertificate=True;",
          "CommandTimeout": 60,
          "MaxRowsToReturn": 1000,
          "EnableQueryLogging": true
        },
        {
          "Name": "PostgreSQL-Production",
          "Type": "PostgreSQL",
          "ConnectionString": "Host=localhost;Database=mydb;Username=postgres;Password=postgres;",
          "CommandTimeout": 90,
          "MaxRowsToReturn": 100,
          "EnableQueryLogging": true
        },
        {
          "Name": "PostgreSQL-Local",
          "Type": "PostgreSQL",
          "ConnectionString": "Host=localhost;Port=5432;Database=testdb;Username=dev;Password=dev123;",
          "CommandTimeout": 60,
          "MaxRowsToReturn": 500,
          "EnableQueryLogging": true
        }
      ]
    },
    "Repository": {
      "Enable": true,
      "ActiveProvider": "GitHub-AgentWikiChat",
      "Providers": [
        {
          "Name": "GitHub-AgentWikiChat",
          "Type": "GitHub",

    "RAG": {
      "_Comment": "Configuración para RAG (Retrieval-Augmented Generation) con Chroma y LM Studio",
      "Enable": false,
      "LmStudioEmbeddings": "http://192.168.10.214:1234/v1/embeddings",
      "ChromaApi": "http://192.168.10.214:8000/api/v1",
      "CollectionName": "Documentos",
      "MaxResults": 5,
      "TimeoutSeconds": 300
    }
  }
}
